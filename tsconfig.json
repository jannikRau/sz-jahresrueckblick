{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2019",
    "esModuleInterop": true,
    "strictFunctionTypes": true,
    "strict": true,
    "useUnknownInCatchVariables": false,      /* If set to false, the compiler defaults the error type to any */
    "module": "commonjs",                     /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', 'es2020', or 'ESNext'. */
    "lib": ["es6", "es2019"],                 /* Specify library files to be included in the compilation. */
    "outDir": "dist",                         /* Redirect output structure to the directory. */
    "noEmitOnError": true,                    /* Prevent code compilation if type checker fails */
    "baseUrl": ".",                           /* Base directory to resolve non-absolute module names. */
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },                                        /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
    "allowSyntheticDefaultImports": true,     /* Allow default imports from modules with no default export. This does not affect code emit, just typechecking. */
    "experimentalDecorators": true,           /* Enables experimental support for ES7 decorators. */
    "emitDecoratorMetadata": true,            /* Enables experimental support for emitting type metadata for decorators. */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file. */
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*", 
    "tests/**/*",
    "global.d.ts",
  ],
  "exclude": [
    "node_modules/**/*",
    "typings/**/*",
    ".vscode/**/*",
  ]
}
